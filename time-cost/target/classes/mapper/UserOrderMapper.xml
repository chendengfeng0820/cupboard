<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.info.time_cost.mapper.UserOrderMapper">

    <insert id="insertUserOrder" keyColumn="order_id" keyProperty="order_id" useGeneratedKeys="true">
        insert into useorder (order_telephone, order_username, order_createtime, order_location) values (
        #{order_telephone},#{order_username},#{order_createtime},#{order_location})
    </insert>

    <insert id="insertRelation" keyColumn="user_order_id" keyProperty="user_order_id" useGeneratedKeys="false">
        insert into user_order (user_id, order_id) values (#{user_id},#{order_id})
    </insert>

    <select id="findByUserId" resultType="com.info.pojo.User">
        select * from user where user_id=#{user_id}
    </select>

    <insert id="insertUserTable" useGeneratedKeys="false" keyProperty="user_board_id" keyColumn="user_board_id" >
        insert into user_table (user_id, board_id) values (#{user_id},#{board_id});
    </insert>
</mapper>